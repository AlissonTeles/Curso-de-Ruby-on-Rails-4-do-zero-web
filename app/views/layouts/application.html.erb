<!DOCTYPE html>
<html>
  <head>
    <title>Lojadecamisetas</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= nav_bar brand: "Alisson", brand_link: root_url do %>
      <%= form_tag busca_produto_path,
                                  method: :get,
                                  class: "navbar-form navbar-right" do %>
        <div class="form-group">
          <%= text_field_tag :nome, @buscar_nome , class: "form-control" %>
          <%= button_to "Buscar", nil, class: "btn btn-primary" %>
        </div>
      <% end %>
    <% end %>
    <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
